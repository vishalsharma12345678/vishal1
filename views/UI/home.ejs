<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/home.css">
</head>
<body>
  <header>
    <h1><a href="#">Welcome <%= user.username  %></a></h1>
    <nav>
      <a href="#">Profile</a>
      <a href="/v4/logout">Logout</a>
    </nav>
  </header>
  <main>
    <ul>
      <% for (const i of test_Data) { %>
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"><%= i.test_name %></h5>
            <h5 class="card-title">BEPH0001</h5>
            <h6 class="status"><%= i.status %></h6>
            <p class="card-text">Date: <%= new Date(i.start_time).getDate() + "-" + new Date(i.start_time).getMonth() + "-" + new Date(i.start_time).getFullYear()%></p>
            <p class="card-text">START TIME:  <%= new Date(i.start_time).getHours() + ":"  + new Date(i.start_time).getMinutes()%></p>
            <p class="card-text">END TIME: <%= new Date(i.end_time).getHours() + ":"  + new Date(i.end_time).getMinutes()%></p>
            <button id="button" onclick="myFunction()" data-id="<%= i._id %>" style="padding: 3px;font-size: 10px;" class="btn btn-primary mb-2">Attempt</button>
          </div>
        </div>
      <% } %>
    </ul>
  </main>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js" integrity="sha384-Rx+T1VzGupg4BHQYs2gCW9It+akI2MM/mndMCy36UVfodzcJcF0GGLxZIzObiEfa" crossorigin="anonymous"></script>
<script>
    function myFunction() {
      let i = document.getElementById('button').dataset.id;
      console.log(i)
      window.open(`http://localhost:4000/v4/startTest/${i}`, "", "width=1536,height=789");
  }
  setInterval(() => {
    location.reload()
  }, 10000);
</script>
</body>
</body>
</html>